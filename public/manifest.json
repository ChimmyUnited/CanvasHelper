{
  "manifest_version": 3,
  "name": "Canvas Helper",
  "description": "Uses Canvas API in a Chrome extension to provide helpful tools.",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Canvas Helper"
  },
  "icons": {
    "16": "assets/logo-16.png",
    "24": "assets/logo-24.png",
    "32": "assets/logo-32.png",
    "64": "assets/logo-64.png"
  },
  "permissions": [
    "storage"
  ]
}
